;;------------------------------------------------------------------------------
;; Doom Leader Keybinds
;;------------------------------------------------------------------------------

(map! :leader       ; Be under the Doom SPC leader.

      ;;------------------------------
      ;; 'spy' Prefix:
      ;;------------------------------
      (:prefix ("-" . "spy")

       ;;------------------------------
       ;; Apps Prefix:
       ;;------------------------------
       (:prefix ("u" . "Apps")

        ;;------------------------------
        ;; Autogit:
        ;;------------------------------
        (:prefix ("a" . "Autogit")
         :desc "Status"        "a" #'autogit:status
         :desc "Push"          "o" #'autogit:push
         :desc "Buffers: Kill" "k" #'autogit:buffers:kill
         :desc "Buffers: Bury" "x" #'autogit:buffers:bury))))


;;------------------------------------------------------------------------------
;; The End.
;;------------------------------------------------------------------------------
(imp:provide :dot-emacs 'config 'keybinds 'autogit)
